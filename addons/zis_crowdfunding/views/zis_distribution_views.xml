<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for ZIS Distribution -->
    <record id="zis_distribution_form_view" model="ir.ui.view">
        <field name="name">zis.distribution.form</field>
        <field name="model">zis.distribution</field>
        <field name="arch" type="xml">
            <form string="ZIS Distribution">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="distribution_type"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="distribution_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="recipient"/>
                        <field name="category_id"/>
                        <field name="campaign_id"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view for ZIS Distribution -->
    <record id="zis_distribution_list_view" model="ir.ui.view">
        <field name="name">zis.distribution.list</field>
        <field name="model">zis.distribution</field>
        <field name="arch" type="xml">
            <list string="ZIS Distributions">
                <field name="name"/>
                <field name="distribution_type"/>
                <field name="amount"/>
                <field name="recipient"/>
                <field name="distribution_date"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>
</odoo>