<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for ZIS Donation -->
    <record id="zis_donation_form_view" model="ir.ui.view">
        <field name="name">zis.donation.form</field>
        <field name="model">zis.donation</field>
        <field name="arch" type="xml">
            <form string="ZIS Donation">
                <sheet>
                    <group>
                        <group>
                            <field name="campaign_id"/>
                            <field name="donator_name"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="donation_type"/>
                        </group>
                    </group>
                    <group>
                        <field name="create_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view for ZIS Donation -->
    <record id="zis_donation_list_view" model="ir.ui.view">
        <field name="name">zis.donation.list</field>
        <field name="model">zis.donation</field>
        <field name="arch" type="xml">
            <list string="ZIS Donations">
                <field name="campaign_id"/>
                <field name="donator_name"/>
                <field name="amount"/>
                <field name="donation_type"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>
</odoo>