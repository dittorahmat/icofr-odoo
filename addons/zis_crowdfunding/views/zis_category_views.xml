<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for ZIS Category -->
    <record id="zis_category_form_view" model="ir.ui.view">
        <field name="name">zis.category.form</field>
        <field name="model">zis.category</field>
        <field name="arch" type="xml">
            <form string="ZIS Category">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_zakat_category"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view for ZIS Category -->
    <record id="zis_category_list_view" model="ir.ui.view">
        <field name="name">zis.category.list</field>
        <field name="model">zis.category</field>
        <field name="arch" type="xml">
            <list string="ZIS Categories">
                <field name="name"/>
                <field name="is_zakat_category"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>
</odoo>