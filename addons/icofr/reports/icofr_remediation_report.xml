<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_remediation_monitor" model="ir.actions.report">
        <field name="name">Laporan Pemantauan Tindak Lanjut (Lampiran 13)</field>
        <field name="model">icofr.remediation.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">icofr.report_remediation_monitor</field>
        <field name="report_file">icofr.report_remediation_monitor</field>
        <field name="binding_model_id" ref="model_icofr_remediation_report_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_remediation_monitor">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center mb-4">
                            <h2>Laporan Pemantauan Tindak Lanjut Remediasi</h2>
                            <h4>Lampiran 13 - Tabel 26 SK-5/DKU.MBU/11/2024</h4>
                            <p><strong>Per Tanggal:</strong> <span t-field="o.report_date"/></p>
                        </div>

                        <t t-set="stats" t-value="o.get_remediation_stats()"/>

                        <!-- Summary Table -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h3>I. Ringkasan Status per Unit Kerja</h3>
                                <table class="table table-bordered table-sm">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Unit Kerja / Departemen</th>
                                            <th class="text-center">Total Rencana Aksi</th>
                                            <th class="text-center">Selesai (Closed)</th>
                                            <th class="text-center">Dalam Proses (Open)</th>
                                            <th class="text-center text-danger">Terlambat (Overdue)</th>
                                            <th class="text-center">Tingkat Penyelesaian (%)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="stats.items()" t-as="dept_item">
                                            <t t-set="dept_name" t-value="dept_item[0]"/>
                                            <t t-set="dept_stats" t-value="dept_item[1]"/>
                                            <td><span t-esc="dept_name"/></td>
                                            <td class="text-center"><span t-esc="dept_stats['total']"/></td>
                                            <td class="text-center"><span t-esc="dept_stats['closed']"/></td>
                                            <td class="text-center"><span t-esc="dept_stats['open']"/></td>
                                            <td class="text-center text-danger"><strong><span t-esc="dept_stats['overdue']"/></strong></td>
                                            <td class="text-center">
                                                <t t-if="dept_stats['total'] &gt; 0">
                                                    <span t-esc="round((dept_stats['closed'] / dept_stats['total']) * 100, 1)"/>%
                                                </t>
                                                <t t-else="">
                                                    0%
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Detail Overdue Table -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h3>II. Detail Rencana Aksi Terlambat (Overdue)</h3>
                                <t t-set="has_overdue" t-value="False"/>
                                
                                <t t-foreach="stats.items()" t-as="dept_item">
                                    <t t-if="dept_item[1]['overdue'] &gt; 0">
                                        <t t-set="has_overdue" t-value="True"/>
                                        <h5 class="mt-3"><span t-esc="dept_item[0]"/></h5>
                                        <table class="table table-striped table-sm">
                                            <thead>
                                                <tr>
                                                    <th style="width: 20%;">Kode/Nama Rencana</th>
                                                    <th style="width: 25%;">Temuan Terkait</th>
                                                    <th style="width: 15%;">Target Selesai</th>
                                                    <th style="width: 20%;">PIC</th>
                                                    <th style="width: 20%;">Catatan Kendala</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="dept_item[1]['details']" t-as="plan">
                                                    <td><span t-field="plan.name"/></td>
                                                    <td><span t-field="plan.finding_id.name"/></td>
                                                    <td class="text-danger"><span t-field="plan.target_completion_date"/></td>
                                                    <td><span t-field="plan.action_owner_id.name"/></td>
                                                    <td><span t-field="plan.notes" t-options='{"widget": "text"}'/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </t>
                                </t>
                                
                                <t t-if="not has_overdue">
                                    <div class="alert alert-success">
                                        Tidak ada rencana aksi yang terlambat (Overdue) pada saat ini. Kerja bagus!
                                    </div>
                                </t>
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-12 text-muted">
                                <p><em>Laporan ini dihasilkan secara otomatis oleh Sistem ICORF pada <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></em></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
