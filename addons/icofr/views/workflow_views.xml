<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Icofr Workflow Views -->
    <record id="view_icofr_workflow_list" model="ir.ui.view">
        <field name="name">icofr.workflow.list</field>
        <field name="model">icofr.workflow</field>
        <field name="arch" type="xml">
            <list string="Workflow Persetujuan">
                <field name="name"/>
                <field name="workflow_type"/>
                <field name="current_approver_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_icofr_workflow_form" model="ir.ui.view">
        <field name="name">icofr.workflow.form</field>
        <field name="model">icofr.workflow</field>
        <field name="arch" type="xml">
            <form string="Workflow Persetujuan">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="workflow_type"/>
                            <field name="submitter_id"/>
                        </group>
                        <group>
                            <field name="current_approver_id"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_icofr_workflow_search" model="ir.ui.view">
        <field name="name">icofr.workflow.search</field>
        <field name="model">icofr.workflow</field>
        <field name="arch" type="xml">
            <search string="Workflow Persetujuan">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Action untuk Icofr Workflow -->
    <record id="action_icofr_workflow" model="ir.actions.act_window">
        <field name="name">Workflow Persetujuan</field>
        <field name="res_model">icofr.workflow</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan workflow persetujuan pertama anda!
            </p><p>
                Workflow digunakan untuk mengelola proses persetujuan dalam 
                sistem kontrol internal.
            </p>
        </field>
    </record>
</odoo>