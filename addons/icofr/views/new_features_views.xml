<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_icofr_change_log" model="ir.actions.act_window">
        <field name="name">Log Perubahan</field>
        <field name="res_model">icofr.change.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_launch_dod_wizard" model="ir.actions.act_window">
        <field name="name">Analisis DoD</field>
        <field name="res_model">icofr.dod.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Change Log Views -->
    <record id="view_icofr_change_log_form" model="ir.ui.view">
        <field name="name">icofr.change.log.form</field>
        <field name="model">icofr.change.log</field>
        <field name="arch" type="xml">
            <form string="Log Perubahan">
                <header>
                    <button name="action_submit" string="Ajukan" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Setujui" type="object" class="oe_highlight" invisible="state != 'submitted'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_report"/>
                        </group>
                        <group>
                            <field name="process_id"/>
                            <field name="control_id"/>
                        </group>
                    </group>
                    <group string="Detail Perubahan">
                        <field name="description_after"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_icofr_change_log_tree" model="ir.ui.view">
        <field name="name">icofr.change.log.list</field>
        <field name="model">icofr.change.log</field>
        <field name="arch" type="xml">
            <list string="Log Perubahan">
                <field name="name"/>
                <field name="date_report"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- DoD Wizard View - STABLE VERSION -->
    <record id="view_icofr_dod_wizard_form" model="ir.ui.view">
        <field name="name">icofr.dod.wizard.form</field>
        <field name="model">icofr.dod.wizard</field>
        <field name="arch" type="xml">
            <form string="Analisis Degree of Deficiency (DoD)">
                <sheet>
                    <group>
                        <field name="finding_id"/>
                    </group>
                    <group string="Evaluasi">
                        <field name="q1_assertion_related" widget="radio"/>
                        <field name="q2_likelihood" widget="radio" invisible="q1_assertion_related == 'no'"/>
                        <field name="q3_material_magnitude" widget="radio" invisible="q2_likelihood == 'no'"/>
                        <field name="q5_compensating_control" widget="radio" invisible="q3_material_magnitude == 'no'"/>
                        <field name="q4_important_attention" widget="radio"/>
                        <field name="q6_prudent_official" widget="radio" invisible="q4_important_attention == 'no'"/>
                        <field name="q7_aggregation_needed" widget="radio"/>
                    </group>
                    <group string="Kesimpulan">
                        <field name="final_classification"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Konfirmasi" type="object" class="btn-primary"/>
                    <button string="Batal" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Inherit Control View -->
    <record id="view_icofr_control_form_inherit_log" model="ir.ui.view">
        <field name="name">icofr.control.form.inherit.log</field>
        <field name="model">icofr.control</field>
        <field name="inherit_id" ref="icofr.view_icofr_control_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Log Perubahan (Appendix 6)">
                    <field name="change_log_ids"/>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Inherit Finding View (DoD Wizard) -->
    <record id="view_icofr_finding_form_inherit_dod" model="ir.ui.view">
        <field name="name">icofr.finding.form.inherit.dod</field>
        <field name="model">icofr.finding</field>
        <field name="inherit_id" ref="icofr.view_icofr_finding_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="%(icofr.action_launch_dod_wizard)d" string="Analisis DoD (Wizard)" type="action" class="oe_highlight" 
                    invisible="status in ('closed', 'wont_fix')"
                    context="{'default_finding_id': id}"/>
            </header>
            <group name="deficiency_classification_group" position="after">
                <group string="Override Klasifikasi (Manual/DoD)">
                    <field name="override_deficiency_classification"/>
                    <field name="override_reason"/>
                </group>
            </group>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_icofr_change_log" 
              name="Log Perubahan (Appendix 6)"
              parent="icofr.menu_icofr_master" 
              action="action_icofr_change_log" 
              sequence="70"/>

</odoo>