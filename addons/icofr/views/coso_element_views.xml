<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- COSO Element Views -->

    <!-- Form View -->
    <record id="view_icofr_coso_element_form" model="ir.ui.view">
        <field name="name">icofr.coso.element.form</field>
        <field name="model">icofr.coso.element</field>
        <field name="arch" type="xml">
            <form string="Elemen COSO 2013">
                <header>
                    <!-- Add any header buttons if needed -->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Add any top buttons if needed -->
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Sub-Elemen">
                            <field name="child_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="sequence"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                        <page string="Kontrol Terkait">
                            <field name="control_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter"/>
            </form>
        </field>
    </record>

    <!-- Tree/List View -->
    <record id="view_icofr_coso_element_tree" model="ir.ui.view">
        <field name="name">icofr.coso.element.tree</field>
        <field name="model">icofr.coso.element</field>
        <field name="arch" type="xml">
            <list string="Elemen COSO 2013">
                <field name="name"/>
                <field name="code"/>
                <field name="parent_id"/>
                <field name="sequence"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_icofr_coso_element_search" model="ir.ui.view">
        <field name="name">icofr.coso.element.search</field>
        <field name="model">icofr.coso.element</field>
        <field name="arch" type="xml">
            <search string="Cari Elemen COSO">
                <field name="name"/>
                <field name="code"/>
                <field name="parent_id"/>
            </search>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_icofr_coso_element" model="ir.actions.act_window">
        <field name="name">Elemen COSO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">icofr.coso.element</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan elemen COSO pertama Anda!
            </p><p>
                Elemen COSO digunakan untuk memetakan kontrol internal ke kerangka kerja COSO 2013.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_icofr_coso_element"
              name="Elemen COSO"
              parent="menu_icofr_master"
              action="action_icofr_coso_element"
              sequence="25"/>
</odoo>