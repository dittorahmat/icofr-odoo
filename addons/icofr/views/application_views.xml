<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_icofr_application_list" model="ir.ui.view">
        <field name="name">icofr.application.list</field>
        <field name="model">icofr.application</field>
        <field name="arch" type="xml">
            <list string="Aplikasi Signifikan">
                <field name="name"/>
                <field name="code"/>
                <field name="vendor"/>
                <field name="itgc_status" widget="badge" 
                       decoration-success="itgc_status == 'effective'" 
                       decoration-danger="itgc_status == 'ineffective'"/>
                <field name="itgc_maturity_score" widget="badge"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_icofr_application_form" model="ir.ui.view">
        <field name="name">icofr.application.form</field>
        <field name="model">icofr.application</field>
        <field name="arch" type="xml">
            <form string="Aplikasi Signifikan">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Misal: SAP ERP, Oracle, MyHR..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="vendor"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="itgc_status"/>
                            <field name="itgc_maturity_score"/>
                            <field name="is_processes_auto_ctrl"/>
                            <field name="is_processes_sig_account"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deskripsi" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Kontrol Terkait" name="controls">
                            <field name="control_ids">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_icofr_application_pivot" model="ir.ui.view">
        <field name="name">icofr.application.pivot</field>
        <field name="model">icofr.application</field>
        <field name="arch" type="xml">
            <pivot string="Analisis Kematangan ITGC">
                <field name="name" type="row"/>
                <field name="itgc_maturity_numeric" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_icofr_application_graph" model="ir.ui.view">
        <field name="name">icofr.application.graph</field>
        <field name="model">icofr.application</field>
        <field name="arch" type="xml">
            <graph string="Maturity Radar ITGC" type="bar">
                <field name="name"/>
                <field name="itgc_maturity_numeric" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_icofr_application" model="ir.actions.act_window">
        <field name="name">Aplikasi Signifikan</field>
        <field name="res_model">icofr.application</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Daftarkan aplikasi/sistem IT yang signifikan.
            </p>
            <p>
                Sesuai Bab III 1.5, ITGC harus dievaluasi untuk seluruh aplikasi yang menjalankan kontrol otomatis 
                atau memproses akun signifikan.
            </p>
        </field>
    </record>

    <menuitem id="menu_icofr_application"
              name="Aplikasi Signifikan"
              parent="menu_icofr_master"
              action="action_icofr_application"
              sequence="50"/>
</odoo>
