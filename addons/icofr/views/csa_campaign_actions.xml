<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action untuk CSA Campaign -->
    <record id="action_icofr_csa_campaign" model="ir.actions.act_window">
        <field name="name">Kampanye CSA</field>
        <field name="res_model">icofr.csa.campaign</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat kampanye CSA pertama Anda!
            </p>
            <p>
                Kampanye ini digunakan untuk mengelola periode CSA dan mendistribusikan tugas penilaian ke Lini 1.
                Anda dapat mengelola jadwal CSA, menetapkan kontrol dan proses yang akan dinilai,
                serta melacak penyelesaian CSA.
            </p>
        </field>
    </record>
</odoo>