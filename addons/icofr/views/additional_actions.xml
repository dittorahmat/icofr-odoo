<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action untuk BPM Document -->
    <record id="action_icofr_bpm_document" model="ir.actions.act_window">
        <field name="name">Dokumen BPM dan SOP</field>
        <field name="res_model">icofr.bpm.document</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan dokumen BPM/SOP pertama Anda!
            </p>
            <p>
                Dokumen-dokumen BPM (Business Process Management) dan SOP
                yang digunakan sebagai referensi dalam pengelolaan kontrol internal.
            </p>
        </field>
    </record>

    <!-- Action untuk Penilaian Kualitatif -->
    <record id="action_icofr_qualitative_assessment" model="ir.actions.act_window">
        <field name="name">Asesmen Risiko Kualitatif Akun</field>
        <field name="res_model">icofr.qualitative.assessment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan asesmen kualitatif pertama Anda!
            </p>
            <p>
                Asesmen kualitatif digunakan untuk mengevaluasi risiko akun
                berdasarkan faktor-faktor kualitatif seperti kompleksitas
                atau potensi untuk fraud.
            </p>
        </field>
    </record>
</odoo>