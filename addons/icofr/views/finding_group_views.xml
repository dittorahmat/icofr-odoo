<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_icofr_finding_group_form" model="ir.ui.view">
        <field name="name">icofr.finding.group.form</field>
        <field name="model">icofr.finding.group</field>
        <field name="arch" type="xml">
            <form string="Evaluasi Defisiensi Agregat">
                <header>
                    <button name="action_confirm_evaluation" string="Konfirmasi Evaluasi" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_reset_to_draft" string="Reset ke Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="fiscal_year"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="total_quantitative_impact" widget="monetary"/>
                            <field name="aggregated_deficiency_class" decoration-danger="aggregated_deficiency_class == 'material_weakness'" decoration-warning="aggregated_deficiency_class == 'significant_deficiency'"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Temuan Terkait">
                            <field name="finding_ids" widget="many2many">
                                <list string="Temuan">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="severity_level"/>
                                    <field name="quantitative_impact_amount" string="Dampak (Rp)"/>
                                </list>
                            </field>
                        </page>
                        <page string="Catatan">
                            <field name="evaluation_notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_icofr_finding_group_tree" model="ir.ui.view">
        <field name="name">icofr.finding.group.tree</field>
        <field name="model">icofr.finding.group</field>
        <field name="arch" type="xml">
            <list string="Evaluasi Agregat">
                <field name="name"/>
                <field name="fiscal_year"/>
                <field name="total_quantitative_impact" widget="monetary"/>
                <field name="aggregated_deficiency_class" decoration-danger="aggregated_deficiency_class == 'material_weakness'" decoration-warning="aggregated_deficiency_class == 'significant_deficiency'"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_icofr_finding_group" model="ir.actions.act_window">
        <field name="name">Evaluasi Defisiensi Agregat</field>
        <field name="res_model">icofr.finding.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat Evaluasi Agregat Baru
            </p>
            <p>
                Gunakan fitur ini untuk mengelompokkan beberapa temuan kecil (Control Deficiency)
                dan mengevaluasi apakah gabungan dampaknya mencapai level Significant Deficiency
                atau Material Weakness.
            </p>
        </field>
    </record>

    <menuitem id="menu_icofr_finding_group"
              name="Evaluasi Agregat"
              parent="menu_icofr_compliance"
              action="action_icofr_finding_group"
              sequence="38"/>
</odoo>
