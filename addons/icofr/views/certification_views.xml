<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Icofr Certification Views -->
    <record id="view_icofr_certification_list" model="ir.ui.view">
        <field name="name">icofr.certification.list</field>
        <field name="model">icofr.certification</field>
        <field name="arch" type="xml">
            <list string="Sertifikasi ICORF">
                <field name="name"/>
                <field name="fiscal_year"/>
                <field name="certification_date"/>
                <field name="certified_by_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_icofr_certification_form" model="ir.ui.view">
        <field name="name">icofr.certification.form</field>
        <field name="model">icofr.certification</field>
        <field name="arch" type="xml">
            <form string="Sertifikasi ICORF">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="fiscal_year"/>
                            <field name="certification_date"/>
                        </group>
                        <group>
                            <field name="certified_by_id"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail Sertifikasi">
                            <field name="scope"/>
                            <field name="effectiveness_statement"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_icofr_certification_search" model="ir.ui.view">
        <field name="name">icofr.certification.search</field>
        <field name="model">icofr.certification</field>
        <field name="arch" type="xml">
            <search string="Sertifikasi ICORF">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Action untuk Icofr Certification -->
    <record id="action_icofr_certification" model="ir.actions.act_window">
        <field name="name">Sertifikasi ICORF</field>
        <field name="res_model">icofr.certification</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan sertifikasi ICORF pertama anda!
            </p><p>
                Sertifikasi ICORF digunakan untuk memastikan dan mendokumentasikan 
                efektivitas kontrol internal atas pelaporan keuangan.
            </p>
        </field>
    </record>
</odoo>