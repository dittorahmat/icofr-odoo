<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Views untuk Icofr Testing Schedule -->
    <record id="view_icofr_testing_schedule_tree" model="ir.ui.view">
        <field name="name">icofr.testing.schedule.tree</field>
        <field name="model">icofr.testing.schedule</field>
        <field name="arch" type="xml">
            <list string="Jadwal Pengujian Kontrol">
                <field name="name"/>
                <field name="control_id"/>
                <field name="frequency"/>
                <field name="next_scheduled_date"/>
                <field name="tester_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_icofr_testing_schedule_form" model="ir.ui.view">
        <field name="name">icofr.testing.schedule.form</field>
        <field name="model">icofr.testing.schedule</field>
        <field name="arch" type="xml">
            <form string="Jadwal Pengujian Kontrol">
                <header>
                    <button name="action_generate_testing" type="object" string="Hasilkan Pengujian"/>
                    <button name="action_create_calendar_event" type="object" string="Buat Acara Kalender"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="control_id"/>
                            <field name="schedule_type"/>
                            <field name="frequency"/>
                            <field name="tester_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="next_scheduled_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail Jadwal">
                            <group>
                                <field name="notify_before_days"/>
                                <field name="auto_generate_task"/>
                            </group>
                            <field name="description"/>
                        </page>
                        <page string="Riwayat Pengujian">
                            <field name="testing_ids"/>
                        </page>
                        <page string="Catatan">
                            <field name="last_execution_date"/>
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_icofr_testing_schedule_calendar" model="ir.ui.view">
        <field name="name">icofr.testing.schedule.calendar</field>
        <field name="model">icofr.testing.schedule</field>
        <field name="arch" type="xml">
            <calendar string="Kalender Jadwal Pengujian" date_start="next_scheduled_date" color="tester_id" mode="month">
                <field name="name"/>
                <field name="control_id"/>
                <field name="tester_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_icofr_testing_schedule_search" model="ir.ui.view">
        <field name="name">icofr.testing.schedule.search</field>
        <field name="model">icofr.testing.schedule</field>
        <field name="arch" type="xml">
            <search string="Jadwal Pengujian Kontrol">
                <field name="name"/>
                <field name="control_id"/>
                <field name="frequency"/>
                <field name="tester_id"/>
                <field name="status"/>
            </search>
        </field>
    </record>

    <!-- Action untuk Icofr Testing Schedule -->
    <record id="action_icofr_testing_schedule" model="ir.actions.act_window">
        <field name="name">Jadwal Pengujian Kontrol</field>
        <field name="res_model">icofr.testing.schedule</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan jadwal pengujian pertama anda!
            </p><p>
                Jadwal pengujian digunakan untuk mengotomatiskan proses 
                pengujian kontrol internal sesuai dengan frekuensi yang ditentukan.
            </p>
        </field>
    </record>
    
    <!-- Tambahkan menu item -->
    <menuitem id="menu_icofr_testing_schedule" 
              name="Jadwal Pengujian" 
              action="action_icofr_testing_schedule" 
              sequence="50"
              parent="menu_icofr_operational"/>
</odoo>