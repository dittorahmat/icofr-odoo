<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Icofr Control Views -->
    <record id="view_icofr_control_list" model="ir.ui.view">
        <field name="name">icofr.control.list</field>
        <field name="model">icofr.control</field>
        <field name="arch" type="xml">
            <list string="Kontrol Internal">
                <field name="name"/>
                <field name="code"/>
                <field name="control_type"/>
                <field name="owner_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_icofr_control_form" model="ir.ui.view">
        <field name="name">icofr.control.form</field>
        <field name="model">icofr.control</field>
        <field name="arch" type="xml">
            <form string="Kontrol Internal">
                <header>
                    <!-- Staff Lini 1: Submit ke Manager -->
                    <button name="action_submit_l1" type="object" string="Submit to Manager" class="btn-primary" invisible="status != 'draft'"/>
                    
                    <!-- Manager Lini 1: Approve ke Lini 2 -->
                    <button name="action_approve_l1" type="object" string="Approve (L1)" class="btn-primary" invisible="status != 'waiting_l1_approval'" groups="icofr.group_icofr_line_1_manager"/>
                    
                    <!-- Staff Lini 2: Verify Design -->
                    <button name="action_verify_l2" type="object" string="Verify Design" class="btn-primary" invisible="status != 'under_review'" groups="icofr.group_icofr_line_2"/>
                    
                    <!-- Manager Lini 2: Final Approve -->
                    <button name="action_approve_l2" type="object" string="Final Approve" class="btn-success" invisible="status != 'waiting_l2_approval'" groups="icofr.group_icofr_line_2_manager"/>
                    
                    <!-- Reject / Reset -->
                    <button name="action_draft" type="object" string="Return to Draft" invisible="status not in ('waiting_l1_approval', 'under_review', 'waiting_l2_approval')"/>
                    
                    <field name="status" widget="statusbar" statusbar_visible="draft,waiting_l1_approval,under_review,waiting_l2_approval,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field name="code"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="control_type"/>
                            <field name="control_specific_type"/>
                            <field name="control_risk_level"/>
                            <field name="supporting_app"/>
                            <field name="service_provider_name" invisible="control_specific_type != 'service_org'"/>
                            <field name="soc_report_ref" invisible="control_specific_type != 'service_org'"/>
                            <field name="frequency"/>
                            <field name="owner_id"/>
                            <field name="valid_from"/>
                            <field name="valid_to"/>
                            <field name="executing_department"/>
                            <field name="executing_job_title"/>
                        </group>
                        <group string="Atribut Teknis (Juknis BUMN)">
                            <field name="itgc_control" widget="boolean_toggle"/>
                            <field name="itgc_area" invisible="not itgc_control"/>
                            
                            <field name="control_type_detailed"/>
                            <field name="automated_control_type" invisible="control_type_detailed != 'automated'"/>

                            <field name="impacted_fsli_ids" widget="many2many_tags"/>
                            <field name="euc_complexity" invisible="control_specific_type != 'euc'"/>
                            <group colspan="2" invisible="control_specific_type != 'euc'">
                                <field name="euc_has_version_ctrl"/>
                                <field name="euc_has_access_ctrl"/>
                                <field name="euc_has_change_ctrl"/>
                                <field name="euc_has_integrity_ctrl"/>
                            </group>

                            <field name="ipe_type" invisible="control_specific_type != 'ipe'"/>
                            <field name="mrc_precision_threshold" invisible="control_specific_type != 'mrc'"/>
                            <field name="status"/>
                            <field name="design_effective" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Asersi &amp; IPO">
                            <group>
                                <group string="Asersi Laporan Keuangan">
                                    <field name="assertion_existence"/>
                                    <field name="assertion_completeness"/>
                                    <field name="assertion_accuracy"/>
                                    <field name="assertion_authorization"/>
                                    <field name="assertion_valuation"/>
                                </group>
                                <group string="IPO (Information Processing Objective)">
                                    <field name="ipo_completeness"/>
                                    <field name="ipo_accuracy"/>
                                    <field name="ipo_validity"/>
                                    <field name="ipo_restricted_access"/>
                                </group>
                            </group>
                        </page>
                        <page string="Deskripsi">
                            <field name="description"/>
                            <field name="objective"/>
                        </page>
                        <page string="Validasi Rancangan (Lini 2)">
                            <field name="design_validation_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="test_date"/>
                                    <field name="design_validation_conclusion"/>
                                    <field name="tester_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Framework COBIT">
                            <group>
                                <field name="cobit_element_id"/>
                                <field name="cobit_element_ids"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_icofr_control_search" model="ir.ui.view">
        <field name="name">icofr.control.search</field>
        <field name="model">icofr.control</field>
        <field name="arch" type="xml">
            <search string="Kontrol Internal">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Action untuk Icofr Control -->
    <record id="action_icofr_control" model="ir.actions.act_window">
        <field name="name">Kontrol Internal</field>
        <field name="res_model">icofr.control</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan kontrol internal pertama anda!
            </p><p>
                Kontrol internal digunakan untuk memastikan akurasi dan keandalan
                laporan keuangan sesuai standar ICORF.
            </p>
        </field>
    </record>

    <!-- Menu item untuk Kontrol Internal -->
    <menuitem id="menu_icofr_control"
              name="Kontrol Internal"
              sequence="17"
              parent="menu_icofr_master"
              action="action_icofr_control"/>
</odoo>